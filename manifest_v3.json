{
  "manifest_version": 3,
  "name": "Steam Workshop Auto-Subscribe",
  "version": "1.0",
  "description": "Feliratkozik automatikusan a Steam Collection itemekre.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://steamcommunity.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
